<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ListView
        android:id="@+id/msg_list"
        android:layout_width="300dp"
        android:layout_height="match_parent"/>


   <Button
       android:id="@+id/send_btn"
       android:text="@string/send_btn_text"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       />

    <EditText
        android:id="@+id/msg_editText"
        android:layout_width="180dp"
        android:hint="@string/edit_text_hint"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/send_btn" />

    <Button
        android:id="@+id/receive_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/msg_editText"
        android:text="@string/receive_btn_text" />

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_toRightOf="@+id/msg_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</RelativeLayout>